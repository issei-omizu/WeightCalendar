<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.issei.omizu.weightcalendar">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".presentation.WeightCalendarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.view.activity.WorkoutActivity" />
        <activity android:name=".presentation.view.activity.PhysicalMeasurementActivity" />
        <activity android:name=".presentation.view.activity.PhysicalMeasurementInputActivity" />
        <activity android:name=".presentation.view.activity.PhysicalMeasurementChartActivity" />
        <activity android:name=".presentation.view.activity.SettingsActivity"></activity>
    </application>

</manifest>